<?xml version="1.0"?>
<ruleset name="Bid Calculator">
    <description>The Bid Calculator Coding Standards</description>

    <arg name="basepath" value="."/>
    <arg name="colors"/>
    <arg name="parallel" value="75"/>
    <arg value="sp"/>

    <!-- Define the directories to be scanned -->
    <file>app</file>
    <file>config</file>
    <file>resources</file>
    <file>routes</file>
    <file>tests</file>

    <!-- Exclude Blade files from scanning -->
    <exclude-pattern>**/*.blade.php</exclude-pattern>

    <!-- Reference the PSR-12 coding standard -->
    <rule ref="PSR12"/>

    <!-- Exclude specific rules if necessary -->
    <exclude name="Generic.Files.LineLength"/>

    <!-- Disable PSR1.Methods.CamelCapsMethodName.NotCamelCaps only for the "legacy" folder -->
    <rule ref="PSR1.Methods.CamelCapsMethodName.NotCamelCaps">
      <exclude-pattern>tests/*/*Test.php</exclude-pattern>
    </rule>
</ruleset>
